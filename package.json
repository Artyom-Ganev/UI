{
   "name": "saby-ui",
   "version": "19.300.0",
   "repository": {
      "type": "git",
      "url": "git@platform-git.sbis.ru:saby/UI.git"
   },
   "files": [
      "UI/*",
      "Markup/*",
      "TextMarkup/*",
      "VirtualTreeMarkup/*",
      "VirtualDom/*",
      "WmlBuilder/*"
   ],
   "scripts": {
      "build": "npm run build:typescript && npm run build:app",
      "build:typescript": "saby-typescript --install --tsconfig=tsconfig.base.json",
      "build:app": "node node_modules/gulp/bin/gulp.js --gulpfile=node_modules/sbis3-builder/gulpfile.js build --config=../../buildTemplate.json",
      "compile": "tsc",
      "start": "node node_modules/saby-units/cli/server",
      "test": "saby-units --isolated",
      "test:node": "saby-units --isolated --report",
      "test:node-coverage": "saby-units --isolated --report --coverage",
      "test:browser": "saby-units --browser --report",
      "test:browser-coverage": "saby-units --browser --report --coverage",
      "require-min": "node node_modules/uglify-js/bin/uglifyjs --compress --mangle -o ws/ext/requirejs/require-min.js -- ws/ext/requirejs/require.js",
      "lint": "node ./node_modules/eslint/bin/eslint --ext .js --ext .es --color --no-eslintrc -c=.eslintrc.json -f=stylish .",
      "lint:fix": "node ./node_modules/eslint/bin/eslint --ext .js --ext .es --color --no-eslintrc -c=.eslintrc.json -f=stylish --fix ."
   },
   "saby-units": {
      "moduleType": "amd",
      "root": "application",
      "tests": "UITest",
      "report": "./application/artifacts/xunit-report.xml",
      "htmlCoverageReport": "./application/artifacts/coverage/index.html",
      "jsonCoverageReport": "./application/artifacts/coverage.json",
      "url": {
         "port": 1023
      }
   },
   "nyc": {
      "include": [
         "UI/**/*.js",
         "VTree/**/*.js",
         "Wml/**/*.js"
      ],
      "reporter": [
         "text",
         "html"
      ],
      "cache": false,
      "eager": true,
      "report-dir": "./application/artifacts/coverage"
   },
   "dependencies": {},
   "devDependencies": {
      "@tensor-corp/eslint-config": "^2.0.3",
      "body-parser": "^1.18.3",
      "cookie-parser": "^1.4.3",
      "eslint": "^5.6.1",
      "express": "^4.16.3",
      "requirejs": "2.1.18",
      "rmi": "git+https://git.sbis.ru/sbis/rmi.git#rc-19.300",
      "Router": "git+https://github.com/saby/Router.git#rc-19.300",
      "saby-inferno": "git+https://github.com/saby/inferno.git#master",
      "sbis3-builder": "git+https://github.com/saby/Builder.git#rc-19.300",
      "sbis3-ws": "git+https://git.sbis.ru/sbis/ws.git#rc-19.300",
      "saby-i18n": "git+https://github.com/saby/i18n.git#rc-19.300",
      "serve-static": "1.11.x",
      "saby-typescript": "git+https://github.com/saby/TypeScript.git#rc-19.300",
      "saby-units": "git+https://github.com/saby/Units.git#rc-19.300",
      "saby-types": "git+https://github.com/saby/Types.git#rc-19.300",
      "sbis-cdn": "git+https://github.com/saby/wasaby-cdn.git#rc-19.300"
   }
}
